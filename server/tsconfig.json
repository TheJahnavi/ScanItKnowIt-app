{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Removed specific "types" array to allow TypeScript to automatically discover type definitions
    // This fixes TS2688 errors where TypeScript cannot find type definition files for 'express' and 'node'
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "firebase-admin/*": ["./node_modules/firebase-admin/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}