{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "outDir": "dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "noEmit": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}