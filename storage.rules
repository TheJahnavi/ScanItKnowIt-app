// Allow admins to perform all operations
// Allow users to perform all operations on their own data
// Allow read access to public data

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // User profile images
    match /users/{userId}/profile.{extension} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Product images
    match /products/{analysisId}/image.{extension} {
      allow read;
      // CORRECTED: Allow write only if the user owns the corresponding product_analysis document
      allow write: if request.auth != null &&
        get(/databases/$(database)/documents/product_analyses/$(analysisId)).data.userId == request.auth.uid;
    }
  }
}