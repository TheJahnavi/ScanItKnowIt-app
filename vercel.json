{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "output": "dist/client-dist"
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "output": "dist/server-dist"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server-dist/vercel-entry.js"
    },
    {
      "src": "/(.*)\\.(.*)",
      "dest": "dist/client-dist/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "dist/client-dist/index.html"
    }
  ]
}