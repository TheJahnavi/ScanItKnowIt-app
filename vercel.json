{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "client",
      "use": "@vercel/node",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "public"
      }
    },
    {
      "src": "server",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/server/$1"
    },
    {
      "source": "/",
      "destination": "/client/public/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/client/public/$1"
    }
  ]
}