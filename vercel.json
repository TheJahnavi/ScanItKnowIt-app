{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "builds": [
    {
      "src": "server/vercel-entry.ts",
      "use": "@vercel/node",
      "config": {
        "tsconfig": "server/tsconfig.json"
      }
    },
    {
      "src": "client",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server"
    },
    {
      "src": "/(.*)",
      "dest": "client/public",
      "methods": ["GET"]
    }
  ]
}