{
  "outputDirectory": "dist/client", 
  "buildCommand": "cd client && pnpm install && pnpm run build && cd ../server && pnpm install && pnpm run build",
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/api/index.ts",
      "status": 200
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/client/assets/$1", 
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/index.html",
      "status": 200
    }
  ]
}